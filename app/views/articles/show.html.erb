<div class"row">
<div class="col"></div>
<div class="col-md-7">
<% if @article.photo.present? %>
<%= image_tag(@article.photo, style: "width:100%") %>
<% else %>
<%= image_tag 'cxstudio.jpg', style: "width:100%" %>
<% end %>
<p>
  <strong>TITLE:</strong><br>
  <strong><%= @article.title %></strong>

</p>

<p>
  <%= @article.created_at.strftime('%A %-b %-d, %Y - %l:%M %p') %>
</p>

<p><strong>
  ARTICLE:<BR>
</strong>
  <%= @article.text %>
  </p>
  <p>
    <% if @article.music.present? %>
    <%= audio_tag(@article.music, controls: true, style: "width:100%") %>
    <% end %>
  </p>

  <p>
    <% if @article.movie.present? %>
    <%= video_tag(@movie.music, controls: true,
        type: 'video/mp4', style: "width:100%") %>
    <% end %>
  </p>


<hr>

<%= render 'comments/comment' %>

<% if current_user %>

</hr>


<%= render  'comments/form' %>
<% else %>
Please <%= link_to 'Sign In', new_session_path %> or
      <%= link_to 'Sign up', new_user_path %> create a comment
<% end %>
<p>
<br>  <%= link_to 'Back', articles_path, class: 'btn btn-sm btn-info' %>
</p>

<p>
  <%= link_to 'Home', welcome_index_path, class: 'btn btn-sm btn-primary' %>
</p>

</div> <!-- 10 columns medium -->

<div class="col"></div>
</div>
