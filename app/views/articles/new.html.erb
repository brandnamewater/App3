<div class"row" style="padding-top:10%">
<div class="col"></div>
<div class="col-md-7">


<h1>dis da new page 1</h1>
<%= form_for :article, url: articles_path do |f| %>
<div class="field" style="100%;">
<!-- checking for errors -->
<% if @article.errors.any? %>
<div id="Error_explanation">
  <h2>
    <%= pluralize(@article.errors.count, "errors") %>
    prohibited article from being saved:

  </h2>
<p>
  <% @article.errors.full_messages.each do |msg| %>
<ul>
  <li>
    <%= msg %>
  </li>
</ul>
<% end %>
</p>
</div>
<% end %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: 'form-control' %>
</p>
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text, class: 'form-control' %>
</p>
<p>
  <%= f.submit class: 'btn btn-lg btn-success' %>
</p>
</div>
<% end %>

<p>
  <%= link_to 'Back', articles_path, class: 'btn btn-sm btn-info' %>
</p>

<p>
  <%= link_to 'Home', welcome_index_path, class: 'btn btn-sm btn-primary' %>
</p>

</div> <!-- 10 columns medium -->

<div class="col"></div>
</div>
