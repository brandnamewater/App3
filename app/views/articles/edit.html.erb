<div class"row" style="padding-top:10%">
<div class="col"></div>
<div class="col-md-7">


<h1>EDIT ARTICLE</h1>
<%= form_for @article html: {multipart: true} do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: 'form-control' %>
</p>
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text, class: 'form-control' %>
</p>

<p>
  <%= f.label :photo %><br>
  <%= f.file_field :photo, class: 'form-control' %><br>
</p>

<p>
  <%= f.label :music %><br>
  <%= f.file_field :music, class: 'form-control' %><br>
</p>

<p>
  <%= f.label :movie %><br>
  <%= f.file_field :movie, class: 'form-control' %><br>
</p>

<p>
  <%= f.submit class: 'btn btn-lg btn-success'  %>
</p>

<p>
  <%= link_to 'Back', articles_path, class: 'btn btn-sm btn-info' %>
</p>

<p>
  <%= link_to 'Home', welcome_index_path, class: 'btn btn-sm btn-primary' %>
</p>


<% end %>

<div class="col"></div>
</div>
