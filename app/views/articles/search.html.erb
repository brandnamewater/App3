<div class"row">
<div class="col"></div>
<div class="col-md-10"></div>


<strong><h1> List of all em articles </h1></strong>
<p>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-lg btn-info' %>
</p>



<table class="table table-hover table-striped table-responsive-xs">
  <tr>
    <th>Title</th>
    <th>Textss</th>
    <% if current_user && current_user.admin? %>
    <th colspan = "3">Editing Options</th>
    <% else %>
    <th colspan = "1">Show Article</th>
    <% end %>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %> </td>
    <td><%= truncate(article.text, length: 75) %> </td>
    <td><%= link_to 'Show', article_path(article), class: 'btn btn-sm btn-info' %> </td>
    <% if current_user && current_user.admin? %>
    <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-sm btn-warning' %> </td>
    <td><%= link_to 'Delete', article_path(article), class: 'btn btn-sm btn-danger',
              method: :delete, data: {confirm: 'Are you certain?'}
     %> </td>
   <% end %>
  </tr>
<% end %>


<p>
  <%= link_to 'Home', welcome_index_path, class: 'btn btn-md btn-primary' %>
</p>
</div> <!-- 10 columns medium -->

<div class="col"></div>
</div>
