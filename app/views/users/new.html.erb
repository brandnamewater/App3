<div class"row" style="padding-top:10%">
<div class="col"></div>
<div class="col-md-4">
<h1>Create an account</h1>

<%= form_for(@user) do |f| %>

<div class="field" style="100%;">
<!-- checking for errors -->
<% if @user.errors.any? %>
<div id="Error_explanation">
  <h2>
    <%= pluralize(@user.errors.count, "errors") %>
    prohibited article from being saved:

  </h2>
<p>
  <% @user.errors.full_messages.each do |msg| %>
<ul>
  <li>
    <%= msg %>
  </li>
<% end %>
</ul>
</p>
</div>
<% end %>

<%= f.text_field :userid, placeholder: 'Input User ID', class: 'form-control' %><br>
<%= f.email_field :email, placeholder: 'Input Your Email', class: 'form-control' %><br>
<%= f.password_field :password, placeholder: "Create Password", class: 'form-control' %><br>
<%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'form-control' %><br>
<%= f.submit "Create Account", class: 'btn btn-sm btn-primary' %>
<% end %>
</div>
<p>
  <%= link_to 'Articles', articles_path, class: 'btn btn-sm btn-info' %>
</p>

<p>
  <%= link_to 'Home', welcome_index_path, class: 'btn btn-sm btn-primary' %>
</p>

</div> <!-- 10 columns medium -->

<div class="col"></div>
</div>
